<h1><%= @restaurant.name %></h1> <%= link_to "Delete",
  restaurant_path(@restaurant),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<%= link_to "Update #{@restaurant.name}?", edit_restaurant_path %>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>
<%= link_to "Back to Restaurants", restaurants_path %>

<h2>Reviews</h2>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li>
      <strong>Rating:</strong> <%= review.rating %> <br>
      <strong>Content:</strong> <%= review.content %>
    </li>
  <% end %>
</ul>
<%= link_to "add a review", new_restaurant_review_path(@restaurant) %>
